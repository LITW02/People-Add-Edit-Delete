@{
    Layout = null;
}

<!DOCTYPE html>
@using MvcApplication18.Models;
@model IEnumerable<Person>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 40px;">
       <a href="/people/add" class="btn btn-primary">Add</a>
        <table class="table table-hover table-striped table-bordered" style="margin-top: 20px;">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            @foreach (Person person in Model)
            {
                <tr>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>@person.Age</td>
                    <td>
                        <div class="row">
                            <div class="col-md-3">
                                <a href="/people/edit?personid=@person.Id" class="btn btn-warning">Edit</a>
                            </div>
                            <div class="col-md-3">
                                <form method="POST" action="/people/delete">
                                    <input type="hidden" name="personid" value="@person.Id" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
